#!/usr/bin/env groovy

pipeline {
  agent {
    label 'golang-next'
  }
  environment {
    PROJ_PATH = '/go/src/github.com/vapor-ware/sctl'
    GOVERSION = '1.11'
  }
  stages {
    stage('Checkout') {
      steps {
        checkout scm
      }
    }
    stage('Test') {
      steps {
        container('golang'){
          sh 'go test -v'
        }
      }
    }
    stage('Snapshot Build') {
      steps {
        container('golang'){
          sh 'goreleaser release --snapshot --skip-publish --rm-dist'
        }
      }
    }
    stage('Tagged Release') {
      when {
        buildingTag()
      }
      environment {
        GITHUB_TOKEN = credentials('vio-bot-gh-token')
      }
      steps {
        container('golang'){
          sh 'goreleaser release --rm-dist'
        }
      }
    }
  }
}
